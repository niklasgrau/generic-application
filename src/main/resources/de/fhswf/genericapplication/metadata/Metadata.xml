    <core:types>
        <core:type name="offer"
                   typeId="-1336857774"
                   label="[DE:Angebot][EN:Offer]"
                   labelPlural="[DE:Angebote][EN:Offers]"
                   icon="mdi-file-document"
                   objectStringifier="{{number}} - {{designation}}"
                   subsystem="offer-management">
            <core:attributes>
                <core:attribute name="number" label="[DE:Nummer][EN:Number]" required="true" dataType="String">
                    <core:validators>
                        <core:validator
                                expression="^[0-9]+-[0-9]+$"
                                errorMessage="[DE:Eingabe entspricht nicht dem Muster 'Nummer-Nummer'][EN:Input does not match the pattern 'number-number']"/>
                    </core:validators>
                </core:attribute>
                <core:attribute name="sum" label="[DE:Summe][EN:Sum]" required="true" dataType="Number"/>
                <core:attribute name="date" label="[DE:Datum][EN:Date]" required="true" dataType="Date"/>
                <core:attribute name="designation" label="[DE:Bezeichnung][EN:Designation]" required="true"
                                dataType="String"/>
                <core:attribute name="validUntil" label="[DE:Gültig bis][EN:Valid until]" dataType="Date"/>
                <core:attribute name="file" label="[DE:Datei][EN:File]" dataType="File"/>
                <core:attribute name="description" label="[DE:Beschreibung][EN:Description]" dataType="String"/>
                <core:attribute name="status" label="[DE:Status][EN:Status]" required="true" values="offer-status"
                                dataType="Enum"/>
                <core:attribute name="type" label="[DE:Typ][EN:Type]" required="true" values="project-type"
                                dataType="Enum"/>
                <core:attribute name="createdAt" label="[DE:Erstellt am][EN:Created at]" dataType="Date"/>
                <core:attribute name="updatedAt" label="[DE:Aktualisiert am][EN:Updated at]" dataType="Date"/>
            </core:attributes>
            <core:associations>
                <core:association name="orders" label="[DE:Beauftragungen][EN:Assignments]" inverseOf="offer"
                                  type="order" cardinality="many"/>
                <core:association name="contact" label="[DE:Kontakt][EN:Contact]" required="true" inverseOf="offers"
                                  type="contact" cardinality="one"/>
            </core:associations>
        </core:type>
